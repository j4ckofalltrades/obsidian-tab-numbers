{
  "name": "obsidian-tab-numbers",
  "version": "0.1.0",
  "description": "Displays numbered badges on Obsidian tabs when Ctrl/Cmd is held.",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "tsc -noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "obsidian",
    "obsidian-md",
    "obsidian-md-plugin",
    "obsidian-plugin"
  ],
  "author": "Jordan Duabe",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/node": "^22.16.0",
    "builtin-modules": "3.3.0",
    "esbuild": "^0.25.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "obsidian": "latest",
    "tslib": "^2.4.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
